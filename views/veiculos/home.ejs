<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</head>

<body>


  <div class="container">
    <nav class="navbar navbar-light">

      <a class="col-2 navbar-brand" href="#">
        <img src="" width="50%" alt="">
      </a>
      <h1 class="col-4">Lista de Veículos</h1>

      <form method="get" class="col-4 row" action="/veiculos/search">
        <div class="col-auto">
          <input type="search" name="nome" class="form-control" placeholder="Buscar">
        </div>
        <button type="submit" class="col-auto btn btn-primary"><i class="bi bi-search"></i></button>
      </form>

      <a href="/veiculos/cadastro" class="col-1 btn btn-primary">Novo <i class="bi bi-plus-lg"></i></a>
    </nav>
    <div class="row">

      <% if (locals.messages.success) { %>
            <div class="alert alert-success" role="alert">
            <%= locals.messages.success %>
            </div>
      <% } %>

      <% if (locals.messages.error) { %>
            <div class="alert alert-danger" role="alert">
              <%= locals.messages.error %>
            </div>
      <% } %>

              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Modelo</th>
                    <th scope="col">Ano</th>
                    <th scope="col">Cor</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Combustível</th>
                    <th scope="col">Câmbio</th>
                    <th scope="col">PCD</th>
                  </tr>
                </thead>
                <tbody>

                  <% for (veiculo of veiculos) { %>
                    <tr>
                      <th scope="row">
                        <%= veiculo.id %>
                      </th>
                      <td>
                        <%= veiculo.marca %>
                      </td>
                      <td>
                        <%= veiculo.modelo %>
                      </td>
                      <td>
                        <%= veiculo.ano %>
                      </td>
                      <td>
                        <%= veiculo.cor %>
                      </td>
                      <td>
                        <%= veiculo.categoria %>
                      </td>
                      <td>
                        <%= veiculo.combustivel %>
                      </td>
                      <td>
                        <%= veiculo.cambio %>
                      </td>
                      <td>
                        <%= veiculo.pcd %>
                      </td>
                      <td>

                        <div class="row">
                          <form class="col-auto" action="/veiculos/delete" method="post">
                            <input type="hidden" name="id" value="<%= veiculo.id %>">
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                          </form>
                          <a class="col-auto btn btn-info" href="/veiculos/cadastro?id=<%= veiculo.id %>"><i
                              class="bi bi-pencil-square"></i></a>
                        </div>

                      </td>
                    </tr>
                    <% } %>

                </tbody>
              </table>
    </div>

  </div>



</body>

</html>